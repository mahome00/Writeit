@model Bocker
<!DOCTYPE html>
<html lang="en">
<head>

    <link href="~/css/site.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link href="~/css/syddadsida.css" rel="stylesheet" />
    <title>Document</title>

</head>
<body>
    <style>

        #laggtill form {
            margin-top: 30px;
            margin-left:20px;
            margin-right:20px;
        }
        #laggtill h1{
            margin-left: 20px;
            margin-right: 20px;
        }
    </style>
    <div id="laggtill">
    <h1>Lägg till en bok</h1>
        <form asp-action="LaggTillEnBok" asp-controller="Home">
        <!-- Namnbok input -->
        <div class="form-outline mb-4">
            <label class="form-label" for="form4Example1">Boknamn</label>
            @Html.EditorFor(b=>b.Boknamn)
            
        </div>

        <!-- Författare input -->
        <div class="form-outline mb-4">
            <label class="form-label" for="form4Example2">Författare</label>
                @Html.EditorFor(b=>b.Forfattare)
        </div>

        <!-- Sammanfattning input -->
        <div class="form-outline mb-4">
            <label class="form-label" for="form4Example3">Sammanfattning</label>
             @Html.TextAreaFor(b=>b.Sammanfattning)
            
            
        </div>

   
       

            <input type="submit" class="btn btn btn-success btn-lg" value="Spara"></input>
    </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <script src="~/js/site.js"></script>

</body>
</html>