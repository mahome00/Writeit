@model Anvandare
<!DOCTYPE html>
<html lang="en">
<head>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

    <title>Registrera dig</title>
</head>
<body>

    <style>
        body {
            background-color: rgba(188, 188, 188, 0.105);
            margin: 0;
            padding: 0;
        }
    </style>


    <section class="vh-100" style="background-color: #eee;">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px;">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Registrera</p>

                                    <form class="mx-1 mx-md-4" asp-action = "Adduser" asp-controller="Registrera">

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                @Html.EditorFor(a=> a.Namn)
                                                <label class="form-label" for="form3Example1c">Ditt namn</label>
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                @Html.EditorFor(a=> a.Usernamn)
                                                <label class="form-label" for="form3Example3c">Anvandärnamn</label>
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                
                                                @Html.EditorFor(a=> a.Password) 
                                            
                                                <label class="form-label" for="form3Example4c">Lösenord</label>
                                            </div>
                                            
                                           
                                        </div>
                                        <div id="harRedanKon">
                                            <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                                Har du redan ett konto? <a asp-action="Index" asp-controller="Login"
                                                                          style="color: #393f81;">Logga in här</a>


                                        </div>
                                        

                                      

                                     

                                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                            <input type="submit" class="btn btn btn-success btn-lg" value="Registrera"></input>
                                        </div>

                                    </form>

                                </div>
                                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                    <img src="~/Bilder/Notes-pana.png"
                                         class="img-fluid" alt="Sample image">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

                <style>
                    #harRedanKon{

                        wid
                    }
                </style>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>

</body>
</html>