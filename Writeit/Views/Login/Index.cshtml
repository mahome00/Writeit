@model Anvandare
<!DOCTYPE html>
<html lang="en">
<head>

    <link href="~/css/login.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>


    <section class="vh-100" style="background-color: #fffa;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="~/Bilder/Notes-pana.png"
                                     alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    <form asp-action="Index" asp-controller="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">
                                       

                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                            <span class="h1 fw-bold mb-0"><img src="~/Bilder/logo.png" alt="Sample Photo" height="65px" /></span>
                                        </div>

                                        <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Logga in på ditt konto</h5>

                                        <div class="form-outline mb-4">
                                            @Html.EditorFor(a=> a.Usernamn)
                                            <label class="form-label" for="form2Example17">Användarnamn</label>
                                        </div>
                                        
                                        <div class="form-outline mb-4">
                                            @Html.EditorFor(a=> a.Password) 
                                            <label class="form-label" for="form2Example27">Lösenord</label>
                                        </div>

                                        <div class="pt-1 mb-4">
                                           
                                            <input class="btn btn-success" type="submit" value="Logga in"></input>
                                        </div>

                                        <a class="small text-muted" href="#!">Glömde lösenord?</a>
                                        <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                            Har du inte ett konto? <a asp-action="Index" asp-controller="Registrera"
                                                                      style="color: #393f81;">Registrera här</a>
                                        </p>
                                       
                                    </form>
                                    <p>
                                        @ViewBag.ErrorMessage
                                    </p>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

   

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>
</html>
